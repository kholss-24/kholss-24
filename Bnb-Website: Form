       const TheForm =
         document.querySelector ('form')
    
       const NextButton =
         document.getElementById ('Submit');
    
          NextButton.addEventListener ('click', (e) => {
           e.preventDefault ();
            if (TheForm.checkValidity ()) {
              window.location.href = "./Bookings.html"
            }
            else {TheForm.reportValidity();
            }
          });
    </script>
